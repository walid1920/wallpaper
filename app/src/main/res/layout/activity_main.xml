<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:configChanges="orientation|screenSize|keyboardHidden"
    android:background="#050505">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lenarserch"
        android:orientation="horizontal">
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Here"
            android:iconifiedByDefault="false"
            android:background="@drawable/edittextbg"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:paddingStart="5dp"
            android:textSize="20dp"
            android:textColor="#ffff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_item"
        android:layout_below="@id/lenarserch">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/nuture"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nature"
                    android:background="@drawable/gradientnature"
                    android:textSize="20dp"
                    android:textColor="#ffff"
                     android:padding="5dp"
                    android:gravity="end"
                    >
                </TextView>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/nature"
                    android:layout_gravity="start"
                    android:layout_margin="5dp"
                    >
                </ImageView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/bus"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Bus"
                    android:background="@drawable/gradientbus"
                    android:textSize="20dp"
                    android:textColor="#ffff"
                    android:padding="10dp"
                    android:gravity="end"
                    >
                </TextView>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/bus"
                    android:layout_gravity="start"
                    android:layout_margin="5dp"
                    >
                </ImageView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/car"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Car"
                    android:background="@drawable/gradienttrain"
                    android:textSize="20dp"
                    android:textColor="#ffff"
                    android:padding="5dp"
                    android:gravity="end"
                    >
                </TextView>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/car"
                    android:layout_gravity="start"
                    android:layout_margin="5dp"
                    >
                </ImageView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/train"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Train"
                    android:background="@drawable/gradienttrain"
                    android:textSize="20dp"
                    android:textColor="#ffff"
                    android:padding="10dp"
                    android:gravity="end"
                    >
                </TextView>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/bus"
                    android:layout_gravity="start"
                    android:layout_margin="5dp"
                    >
                </ImageView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/trending"
                app:cardCornerRadius="10dp"
                android:layout_margin="20dp"
                android:layout_gravity="start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Trending"
                    android:background="@drawable/graindiant_trending"
                    android:textSize="20dp"
                    android:textColor="#ffff"
                    android:padding="10dp"
                    android:gravity="end"
                    >
                </TextView>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/trending"
                    android:layout_gravity="start"
                    android:layout_margin="5dp"
                    >
                </ImageView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerview"
        android:layout_below="@+id/linear_item"/>

</RelativeLayout>